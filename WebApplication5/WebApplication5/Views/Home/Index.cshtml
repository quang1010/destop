@model List<ClassIndexViewModel>
@{
    ViewBag.Title = "Home";

}

<div>
    <a asp-controller="Home" asp-action="Create" class="btn btn-outline-primary" style="width:auto">Tạo Bánh</a>
    <table class="table table-striped table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên Bánh </th>
                <th>Hiển thị</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {

                foreach (var clas in Model)
                {
                    <tr>
                        <td>@clas.CategoryId</td>
                        <td>@clas.CategoryName</td>
                        <td>
                            <a asp-controller="Home" asp-action="ViewDetail" asp-route-id="@clas.CategoryId" class="btn btn-outline-primary">View</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>