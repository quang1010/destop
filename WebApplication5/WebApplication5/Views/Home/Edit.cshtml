@model HomeEditViewModel
@{
    ViewBag.Title = "Edit cake";
    var cl = ViewBag.Classes as List<Category>;

}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="nameCake"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="nameCake" class="form-control" />
                <span asp-validation-for="nameCake" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="CategoryId"></label>
            </div>
            <div class="col-sm-10">
                <select asp-for="CategoryId" class="custom-select">
                    <option value="Select a department"></option>
                    @if (cl != null)
                    {
                        foreach (var cla in cl)
                        {
                            <option value="@cla.CategoryId">@cla.CategoryName</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ThanhPhan"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="ThanhPhan" class="form-control" />
                <span asp-validation-for="ThanhPhan" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Hsd"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Hsd" class="form-control" />
                <span asp-validation-for="Hsd" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Nsx"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Nsx" class="form-control" />
                <span asp-validation-for="Nsx" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Hsd"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Hsd" class="form-control" />
                <span asp-validation-for="Hsd" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="GiaBan"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="DaXoa"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="DaXoa" class="form-control" />
                <span asp-validation-for="DaXoa" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-outline-primary">Update</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning">Back</a>
            </div>

        </div>
    </form>
