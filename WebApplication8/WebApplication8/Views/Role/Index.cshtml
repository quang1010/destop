@model IEnumerable<WebApplication8.Models.Role>
@{
    ViewBag.Title = "Role management";
}

<h3>
    @ViewBag.Title
</h3>
<a asp-controller="Role" asp-action="Create" class="btn btn-dark" style="width:auto">Create role</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.RoleId
                    </td>
                    <td>
                        @role.RoleName
                    </td>
                    <td>
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-dark">Edit</a>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-dark">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>  